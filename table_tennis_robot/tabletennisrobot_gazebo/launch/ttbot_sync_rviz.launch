<?xml version="1.0"?>
<launch>

  <!-- these are the arguments you can pass this launch file, for example paused:=true -->
	<arg name="debug" default="false"/>
	<arg name="gui" default="true"/>
  <arg name="paused" default="false"/>
	<arg name="use_sim_time" default="true"/>
  <arg name="headless" default="false"/>

  <!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find table_tennis_robot_gazebo)/worlds/tabletennis_table.world"/>
    <arg name="debug" value="$(arg debug)" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="headless" value="$(arg headless)"/>
  </include>

 	<include file="$(find tabletennisrobot_control)/launch/TTbot_control.launch">
		<arg name="robot_name" value="TTbot" />
	</include>


	<include file="$(find tabletennisrobot_description)/launch/TTbot_upload.launch">
		<arg name="robot_name" value="TTbot" />
		<arg name="use_ros_control" value="True" />
		<arg name="motors_controller_type" value="EffortJointInterface" />
		<arg name="bot_x" value="2.2" />
		<arg name="bot_y" value="-0.8" />
		<arg name="bot_z" value="0.0" />
		<arg name="bot_R" value="0.0" /> 
		<arg name="bot_P" value="0.0" /> 
		<arg name="bot_Y" value="1.570795" />
  	</include>

    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
        <param name="use_gui" value="false" />
        <param name="rate" value="20" />
        <rosparam param="source_list">["/TTbot/joint_states"]</rosparam>
        <!--<param name="source_list" value="/TTbot/joint_states" />-->
    </node>
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find table_tennis_robot_gazebo)/config/robot_state_visualize.rviz" required="true" />


</launch>
